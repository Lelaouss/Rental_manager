<form action="{{ path('properties_update') }}" method="post" class="form-group" id="properties-add-form">

    <!-- Modal Header -->
    <div class="modal-header">
        <div class="d-flex justify-content-center w-100">
            <h4 class="modal-title">Cr√©ation d'un local</h4>
        </div>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>

    <!-- Modal body -->
    <div class="modal-body">
        {{ form_row(form_property.label) }}
        {{ form_widget(form_property) }}
        {{ form_widget(form_adress) }}
        {{ form_widget(form_city) }}
    </div>

    <!-- Modal footer -->
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary" id="btn-add-properties">AJOUTER</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">FERMER</button>
    </div>
</form>