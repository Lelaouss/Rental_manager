{% extends 'base.html.twig' %}

{% block title %}Rental Manager - Inscription | Connexion{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('/css/login.css') }}">{% endblock %}

{% block body %}

    <div class="container mt-5 mb-5">
        <h1 class="text-center">Rental Manager</h1>
    </div>

    <div id="absolute-container-forms" class="col-4">
        <div id="block-register" class="container">
            <h2 class="action-title text-center mb-3">INSCRIPTION</h2>
            <form action="{{ path('index') }}" method="post" class="d-flex flex-column justify-content-center">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        {{ form_widget(form_person.civility) }}
                    </div>
                    <div class="form-group col">
                        {{ form_widget(form_person.lastName) }}
                    </div>
                    <div class="form-group col">
                        {{ form_widget(form_person.firstName) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_widget(form_person.mail) }}
                </div>
                {{ form_widget(form_person._token) }}

                {{ form_widget(form_user) }}
                <div class="form-group d-flex justify-content-end mb-0">
                    <button type="submit" class="btn btn-secondary btn-register">S'INSCRIRE</button>
                </div>
            </form>
        </div>

        <div id="block-connection" class="container">
            <h2 class="action-title text-center mb-3">CONNEXION</h2>
            <form action="{{ path('login') }}" method="post" class="d-flex flex-column justify-content-center">
                <div class="form-group">
                    <input type="text" name="_username" id="login" class="form-control" placeholder="Identifiant" required />
                </div>
                <div class="form-group">
                    <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required />
                </div>
                <div class="form-group d-flex justify-content-between align-content-center mb-0">
                    <div class="col-md-6 d-flex justify-content-center">
                        <a id="forgotten-password" href="#">Mot de passe oublié ?</a>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button type="submit" class="btn btn-secondary btn-register">SE CONNECTER</button>
                </div>
            </form>
        </div>
    </div>

    <div id="absolute-container-buttons" class="col-4">
        <div id="go-connection" class="container">
            <h3 class="text-center">Vous avez déjà un compte utilisateur ?</h3>
            <div class="row d-flex justify-content-center">
                <button type="button" id="action-go-connection" class="btn btn-secondary btn-connection">CONNEXION</button>
            </div>
        </div>
        <div id="go-register" class="container">
            <h3 class="text-center">Vous n'avez pas encore de compte ?</h3>
            <div class="row d-flex justify-content-center">
                <button type="button" id="action-go-register" class="btn btn-secondary btn-connection">INSCRIPTION</button>
            </div>
        </div>
    </div>

    <div id="static-container" class="container"></div>

{% endblock %}
{% block javascripts %}<script src="{{ asset('/js/login.js') }}"></script>{% endblock %}