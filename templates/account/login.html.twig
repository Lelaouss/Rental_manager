{% extends 'base.html.twig' %}

{% block title %}Rental Manager - Page de connexion{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                &nbsp;
            </div>
            <div class="col-md-6">
                <h1 class="text-center">Page de connexion</h1>

                {% if hasError %}
                    <div class="alert alert-danger">Une erreur est survenue, l'identifiant ou le mot de passe renseign√© n'est pas correct.</div>
                {% endif %}

                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <input type="text" name="_username" id="login" class="form-control" placeholder="Identifiant" required value="{{ username }}" />
                    </div>
                    <div class="form-group">
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">SE CONNECTER</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}